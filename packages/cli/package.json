{
  "name": "@llamacli/cli",
  "version": "1.0.0",
  "description": "Command line interface for LlamaCLI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "llamacli": "dist/index.js",
    "llama": "dist/index.js"
  },
  "scripts": {
    "build": "node ../../esbuild.config.js && tsc",
    "dev": "node ../../esbuild.config.js --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@llamacli/core": "workspace:*",
    "commander": "^11.1.0",
    "ink": "^4.4.1",
    "react": "^18.2.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ai",
    "cli",
    "llm",
    "development",
    "assistant"
  ],
  "author": "LlamaCLI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/llamacli/llamacli.git",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
