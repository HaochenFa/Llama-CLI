{
  "name": "llamacli",
  "version": "1.0.0",
  "description": "AI-powered command line development partner",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types && npm run build:permissions",
    "build:js": "node esbuild.config.js",
    "build:types": "tsc --build --force",
    "build:permissions": "chmod +x packages/cli/dist/index.js",
    "build:old": "npm run build --workspace=@llamacli/core && npm run build --workspace=@llamacli/cli",
    "build:parallel": "npm run build --workspaces",
    "dev": "npm run dev --workspace=@llamacli/cli",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "npm run build && node scripts/test-basic-integration.js",
    "test:integration:full": "npm run build && node scripts/test-integration.js",
    "test:features": "npm run build && node scripts/test-cli-features.js",
    "test:error": "npm run build && node scripts/test-error-handling.js",
    "test:preferences": "npm run build && node scripts/test-preferences.js",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts",
    "clean": "node scripts/clean.js",
    "typecheck": "tsc --noEmit",
    "demo": "npm run build && node scripts/interactive-demo.js",
    "demo:simple": "node scripts/simple-cli-demo.js",
    "perf": "node scripts/performance-analysis.js",
    "perf:build": "npm run build && npm run perf",
    "perf:simple": "node scripts/simple-perf-test.js",
    "scripts:validate": "node scripts/validate-scripts.js",
    "test:validate": "node scripts/validate-testing-infrastructure.js",
    "test:run": "node scripts/run-tests.js",
    "test:all": "node scripts/run-tests.js all",
    "test:watch": "node scripts/run-tests.js watch",
    "test:core": "node scripts/run-tests.js core",
    "test:cli": "node scripts/run-tests.js cli"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "jsdom": "^25.0.0",
    "msw": "^2.4.0",
    "happy-dom": "^15.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ai",
    "cli",
    "llm",
    "development",
    "assistant",
    "mcp"
  ],
  "author": "LlamaCLI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/llamacli/llamacli.git"
  },
  "bugs": {
    "url": "https://github.com/llamacli/llamacli/issues"
  },
  "homepage": "https://github.com/llamacli/llamacli#readme"
}
